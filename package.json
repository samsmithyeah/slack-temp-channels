  "license": "ISC",
  "engines": {
    "node": ">=24"
  },
  "dependencies": {
    "@slack/bolt": "^4.6.0",
    "dotenv": "^17.3.1",
    "openai": "^6.22.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.2",
    "@slack/types": "^2.20.0",
    "@slack/web-api": "^7.14.1",
    "@types/node": "^25.2.3",
    "knip": "^5.84.1",
    "lefthook": "^2.1.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
