{
  "name": "slack-temp-channels",
  "version": "1.0.0",
  "description": "Temporary Slack channels made easy",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/app.js",
    "dev": "tsx watch src/app.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "check": "biome check src/ tests/",
    "check:fix": "biome check --write src/ tests/",
    "typecheck": "tsc --project tsconfig.check.json",
    "knip": "knip"
  },
